{% extends 'Front/Frontbase.html.twig' %}


{% block title %}
    Recrutement
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="display-3 font-weight-bold text-white">Recrutement</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ recrutement.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ recrutement.titre }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ recrutement.description }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ recrutement.date ? recrutement.date|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Statut</th>
                    <td>{{ recrutement.statut }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_recrutementf_index') }}" class="btn btn-lg btn-info text-white">Back to list</a>

        <a href="{{ path('app_recrutementf_edit', {'id': recrutement.id}) }}" class="btn btn-lg btn-warning text-white">Edit</a>

        {{ include('recrutementf/_delete_form.html.twig') }}
    </div>
{% endblock %}
