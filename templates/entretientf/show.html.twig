{% extends 'Frontbase.html.twig' %}

{% block title %}Entretient{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="display-3 font-weight-bold text-white">Entretient</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entretient.id }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ entretient.date ? entretient.date|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ entretient.type }}</td>
                </tr>
                <tr>
                    <th>Resultat</th>
                    <td>{{ entretient.resultat }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_entretientf_index') }}" class="btn btn-lg btn-info text-white">Back to list</a>

        <a href="{{ path('app_entretientf_edit', {'id': entretient.id}) }}" class="btn btn-lg btn-warning text-white">Edit</a>

        {{ include('entretientf/_delete_form.html.twig') }}
    </div>
{% endblock %}
