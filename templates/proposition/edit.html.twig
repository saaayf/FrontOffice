{% extends 'Frontbase.html.twig' %}

{% block title %} Edit Proposition {% endblock %}



{% block body %}
    <div class="container-xxl py-5">
        <div class="text-center">
            <h1>Edit Proposition</h1>
        </div>
        <div class="my-container">
            {% form_theme form 'bootstrap_5_layout.html.twig' %}
            {{ include('proposition/_form.html.twig', {'button_label': 'Update'}) }}
        </div>
        <div class="text-center p-4 pb-0">
            <a class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft"
              href="{{  path('app_proposition_index', {'id_projet': projet_id}) }}">Back</a>
            <form method="post" action="{{ path('app_proposition_delete', {'id': proposition.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ proposition.id) }}">
                <button class="btn btn-light py-md-3 px-md-5 animated slideInRight">Delete</button>
            </form>
        </div>
    </div>
    <style>
        .my-container {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0px 0px 15px 0px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 20px auto;
            max-width: 600px;
            text-align: center;
        }
    </style>
{% endblock %}
