{% extends 'Frontbase.html.twig' %}

{% block title %} Proposition index {% endblock %}


{% block body %}
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row justify-content-start">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h6 class="section-title bg-white text-center text-primary px-3">Propositions</h6>
                    <h1 class="mb-5"> Propositions </h1>
                    <div class="container-md">
                        <a class="btn btn-outline-primary" href="{{ path('app_proposition_new' , {'id_projet': id_projet}) }}">Create new</a>
                        <a class="btn btn-outline-primary"
                           href="{{ path('app_projet_index_front_all') }}">Back</a>
                    </div>
                </div>
                <div class="row g-4 justify-content-center">
                    {% for proposition in propositions %}
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="course-item bg-light">

                                <div class="text-center p-4 pb-0">
                                    <i class="fa fa-3x fa-globe text-primary mb-4"></i>

                                    <h3>{{ proposition.propBudget }}</h3>
                                    <h5>{{ proposition.description }}</h5>

                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2"><i
                                                class="fa fa-user-tie text-primary me-2"></i>{{ proposition.propDelai ? proposition.propDelai|date('Y-m-d') : '' }}
                                    </small>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <tr>
                            <td colspan="8">no projets found</td>
                        </tr>
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>

{% endblock %}
