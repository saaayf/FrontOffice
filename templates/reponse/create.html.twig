{% extends "Frontbase.html.twig" %}

{% block body %}
<div class="container">
   <div class="row">
        <h3 class="mt-5 mb-5">Ajouter Reponse</h3>
         <div class="col-md-6 offset-md-3">
            {{ form_start(form) }}
                <div class="form-group">
                   {{ form_label(form.subject) }}
                   {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                   {{ form_errors(form.subject) }} {# Display errors for the 'subject' field #}
                </div>
                <div class="form-group">
                   {{ form_label(form.message) }}
                   {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                   {{ form_errors(form.message) }} {# Display errors for the 'message' field #}
                </div>
                <div class="form-group">
                   <button class="btn btn-info mt-2 text-white">Submit</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
